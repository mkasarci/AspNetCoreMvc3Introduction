@page
@using AspNetCoreMvc3.Introduction.Entities
@model AspNetCoreMvc3.Introduction.Pages.Studentp.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    var studentProperties = typeof(Student).GetProperties();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h1>Students</h1>
<table>
    <thead>
    <tr>
        @foreach (var property in studentProperties)
        {
            <th>@property.Name</th>
        }
            
    </tr>
    </thead>
    <tbody>
    
        @foreach (var student in @Model.Students)
        {
        <tr>
            <td>@student.Id</td>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.Email</td>
        </tr>
    }

    </tbody>
</table>
<br />
<form method="post">
    First Name: <input asp-for="Student.FirstName" /> <br />
    Last Name: <input asp-for="Student.LastName" /> <br />
    E-Mail: <input asp-for="Student.Email" /> <br />
    <input type="submit" />
</form>

</body>
</html>
